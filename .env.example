# Guvenlik Ayarlari - .env dosyasi olusturun ve bu degerleri doldurun
# Bu dosya ornek olarak kullanilir, gercek degerler .env dosyasinda olmali

# Google Gemini API Anahtari
GEMINI_API_KEY=your-gemini-api-key-here

# Flask Secret Key (Production'da rastgele uzun bir deger kullanin)
# Ornek: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-use-secrets-token-hex-32

# Flask Ortami (development veya production)
FLASK_ENV=development
FLASK_DEBUG=False
